<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/truscar_background">

    <EditText
        android:id="@+id/email_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="Model"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/rocznik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_lista"
        android:layout_marginBottom="-164dp"
        android:ems="10"
        android:hint="Rocznik"
        android:inputType="textPersonName" />

    <Button
        android:text="Dodaj"
        android:id="@+id/zapisz_p"
        android:background="@drawable/button_style"
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="PowrÃ³t"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button_style"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/zapisz_p"
        android:layout_toRightOf="@+id/qr_code"
        android:layout_toEndOf="@+id/qr_code"
        android:id="@+id/powrot" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Dodawanie nowego pojazdu"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/skanuj"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/qr_code"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:background="@drawable/button_style2"
        android:text="Skanuj"
        android:visibility="visible" />

    <EditText
        android:id="@+id/qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="106dp"
        android:ems="10"
        android:hint="QR kod"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <EditText
        android:id="@+id/rejestracyjny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_lista"
        android:layout_below="@+id/qr_code4"
        android:ems="10"
        android:hint="Nr_rejestracyjny"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/qr_code4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_lista"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Silnik"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/marka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:ems="10"
        android:hint="Marka"
        android:inputType="textPersonName" />


</RelativeLayout>
