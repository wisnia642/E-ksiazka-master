<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.strzala.e_ksiazaka1.New_user">

    <Button
        android:text="Utwórz"
        android:id="@+id/zapisz_p"
        android:background="@drawable/button_style"
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Powrót"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button_style"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/zapisz_p"
        android:layout_toRightOf="@+id/qr_code"
        android:layout_toEndOf="@+id/qr_code"
        android:id="@+id/powrot" />

    <TextView
        android:id="@+id/napis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Dodawanie nowego uzytkownika"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="QR kod"
        android:inputType="textPersonName" />

    <Button
        android:text="Skanuj"
        android:layout_height="50dp"
        android:id="@+id/skanuj"
        android:background="@drawable/button_style2"
        android:layout_width="100dp"
        android:layout_alignBottom="@+id/qr_code"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/qr_code"
        android:layout_marginBottom="150dp"
        android:text="Akceptuję regulamin serwisu"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/haslo_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/haslo"
        android:ems="10"
        android:hint="Powtórz hasło"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/haslo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="Hasło"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/regulamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="189dp"
        android:layout_marginStart="79dp"
        android:text="Podgląd regulaninu"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>
