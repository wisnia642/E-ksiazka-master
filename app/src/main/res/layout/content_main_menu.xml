<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dane4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.strzala.e_ksiazaka1.MainMenu"
    tools:showIn="@layout/app_bar_main_menu">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="290dp"
    android:layout_marginBottom="90dp"
    android:id="@+id/pojazdy_view">

    <TextView
        android:text="Samochody (1)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/black" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/pojazdy"
        android:layout_height="80dp" />
</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="190dp"
    android:layout_marginTop="160dp"
    android:id="@+id/zgloszenia_view"
    android:drawSelectorOnTop="false"
    >

    <TextView
        android:text="Zgłoszenia (1)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"/>


    <ListView
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/zgloszenia"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:orientation="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_height="90dp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/konto_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="335dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konto (1)"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/konto"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scrollbars="horizontal" />
    </LinearLayout>

<TextView
    android:text="Przeciągnij aby odświerzyć"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:id="@+id/textView7"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/zgloszenie"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="57dp"
        android:background="@drawable/button_style"
        android:text="Dodaj zgłoszenie"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/button_style"
        android:text="Add Car"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

</RelativeLayout>
