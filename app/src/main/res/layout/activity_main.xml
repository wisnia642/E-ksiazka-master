<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white">

    <Button
        android:id="@+id/przypomnienie_hasla"
        android:textColor="@android:color/background_light"
        android:text="@string/przypomnienie_hasla"
        android:shadowRadius="5"
        android:textSize="12sp"
        android:background="@drawable/button_style2"
        android:layout_height="40dp"
        android:layout_width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/logowanie_qr"
        android:layout_alignStart="@+id/logowanie_qr" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/konto"
        android:textColorLink="?attr/actionMenuTextColor"
        android:background="@drawable/button_style2"
        android:textColor="@android:color/background_light"
        android:text="@string/utworz_konto"
        android:shadowRadius="5"
        android:textSize="12sp"
        android:layout_width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/logowanie_qr"
        android:textColor="@android:color/background_light"
        android:text="@string/button_login_qr"
        android:shadowRadius="5"
        android:textSize="14sp"
        android:background="@drawable/button_style"
        android:layout_height="40dp"
        android:layout_width="120dp"
        android:layout_alignTop="@+id/logowanie"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/logowanie"
        android:textColorLink="?attr/actionMenuTextColor"
        android:background="@drawable/button_style"
        android:textColor="@android:color/background_light"
        android:text="@string/button_login"
        android:shadowRadius="5"
        android:textSize="14sp"
        android:layout_width="120dp"
        android:layout_above="@+id/konto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/login"
        android:hint="Adres email"
        android:textColorHighlight="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textAlignment="center"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="@string/haslo"
        android:textColorHint="@android:color/background_dark"
        android:textAlignment="center"
        android:layout_below="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Zezwól na zapisywanie hasła"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoks"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/logowanie_qr"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignEnd="@+id/checkBoks"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/checkBoks"
        app:srcCompat="@mipmap/car" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Material.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
